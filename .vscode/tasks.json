{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "Deploy-Local",
            "type": "shell",
            "command": "sh .scripts/deploy.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Deploy-Local-PTR",
            "type": "shell",
            "command": "sh .scripts/deploy.sh",
            "args": [
                "-p"
            ],
            "group": "build"
        },
        {
            "label": "Deploy-Local-Beta",
            "type": "shell",
            "command": "sh .scripts/deploy.sh",
            "args": [
                "-b"
            ],
            "group": "build"
        },
        {
            "label": "Busted All",
            "type": "shell",
            "command": "busted",
            "group": {
                "kind": "test",
                "isDefault": true
            },
        },
        {
            "label": "Busted this file",
            "type": "shell",
            "command": "busted",
            "args": [
                "${file}"
            ],
            "group": "test"
        },
        {
            "label": "Busted List Tests",
            "type": "shell",
            "command": "busted",
            "args": [
                "-l"
            ],
            "group": "test"
        }
    ]
}