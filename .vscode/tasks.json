{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "label": "Deploy-Local",
            "type": "shell",
            "command": "sh .scripts/deploy.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Deploy-Local-PTR",
            "type": "shell",
            "command": "sh .scripts/deploy.sh -p",
            "group": "build"
        },
        {
            "label": "Deploy-Local-XPTR",
            "type": "shell",
            "command": "sh .scripts/deploy.sh -x",
            "group": "build"
        },
        {
            "label": "Deploy-Local-Beta",
            "type": "shell",
            "command": "sh .scripts/deploy.sh -b",
            "group": "build"
        },
        {
            "label": "Busted All",
            "type": "shell",
            "command": "busted",
            "group": {
                "kind": "test",
                "isDefault": true
            },
        },
        {
            "label": "Busted All w/coverage",
            "type": "shell",
            "command": "busted",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "-c"
            ]
        },
        {
            "label": "Busted this file",
            "type": "shell",
            "command": "busted",
            "args": [
                "--lpath=__tests/?.lua;__tests/wow_api/?.lua",
                "-v",
                "${file}",
            ],
            "windows": {
                "args": [
                    "--lpath=${workspaceFolder}\\__tests\\?.lua;__tests\\wow_api\\?.lua",
                    "-v",
                    "${file}",
                ],
            },
            "group": "test"
        },
        {
            "label": "Busted List Tests",
            "type": "shell",
            "command": "busted",
            "args": [
                "-l"
            ],
            "group": "test"
        }
    ]
}